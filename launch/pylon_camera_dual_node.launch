<?xml version="1.0"?>
<launch>
    <arg name="respawn" default="false" />
    <arg name="debug" default="false" />
    <arg name="left_node_name" default="pylon_camera_node_left" />
    <arg name="right_node_name" default="pylon_camera_node_right" />
    <arg name="config_file_left" default="$(find pylon_camera)/config/left.yaml" />
    <arg name="config_file_right" default="$(find pylon_camera)/config/right.yaml" />

    <arg unless="$(arg debug)" name="launch_prefix" value="" />
    <arg     if="$(arg debug)" name="launch_prefix" value="gdb -ex run --args" />

    <node ns="left" name="$(arg left_node_name)" pkg="pylon_camera" type="pylon_camera_node" output="screen"
          respawn="$(arg respawn)" launch-prefix="$(arg launch_prefix)">
        <rosparam command="load" file="$(arg config_file_left)" />
    </node>
    <node ns="right" name="$(arg right_node_name)" pkg="pylon_camera" type="pylon_camera_node" output="screen"
          respawn="$(arg respawn)" launch-prefix="$(arg launch_prefix)">
        <rosparam command="load" file="$(arg config_file_right)" />
    </node>
</launch>
